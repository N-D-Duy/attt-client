<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.duynguyen.atttclient.presentation.FileSelectionController">
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">

        <Label fx:id="fileInfoLabel" text="No file selected" />
        <ProgressBar fx:id="progressBar" progress="0.0" visible="false" />
        <Label fx:id="progressLabel" text="0%" visible="false" />
        <Label fx:id="timeRemainingLabel" text="Time remaining: Calculating..." visible="false" />

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnSelectFile" text="Select File" onAction="#onSelectFile" />
            <Button fx:id="btnEncryptFile" text="Encrypt File" onAction="#onEncryptFile" disable="true"/>
            <Button fx:id="btnSendFile" text="Send File" onAction="#onSendFile" disable="true"/>
        </HBox>
    </VBox>
</AnchorPane>

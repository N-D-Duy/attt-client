<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.duynguyen.atttclient.presentation.FileSelectionController">
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">

        <!-- Label hiển thị tên file và kích thước -->
        <Label fx:id="fileInfoLabel" text="Chưa chọn file" />

        <!-- Các nút chọn file, mã hóa file, gửi file -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnSelectFile" text="Chọn File" onAction="#onSelectFile" />
            <Button fx:id="btnEncryptFile" text="Mã hóa File" onAction="#onEncryptFile" disable="true"/>
            <Button fx:id="btnSendFile" text="Gửi File" onAction="#onSendFile" disable="true"/>
        </HBox>
    </VBox>
</AnchorPane>
